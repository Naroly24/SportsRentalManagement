```razor
@model SportsRentalManagement.Models.Equipo
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card shadow-lg">
                    <div class="card-header bg-info text-white d-flex align-items-center">
                        <i class="bi bi-eye-fill fs-4 me-3"></i>
                        <h2 class="h3 mb-0">Detalles del Equipo: @Model.Nombre</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="text-primary mb-3">Información del Equipo</h4>
                                <table class="table table-borderless">
                                    <tr>
                                        <th>Nombre:</th>
                                        <td>@Model.Nombre</td>
                                    </tr>
                                    <tr>
                                        <th>Tipo:</th>
                                        <td>@Model.TipoEquipo</td>
                                    </tr>
                                    <tr>
                                        <th>Marca:</th>
                                        <td>@Model.Marca</td>
                                    </tr>
                                    <tr>
                                        <th>Cantidad Disponible:</th>
                                        <td>
                                            <span class="badge @(Model.CantidadDisponible > 0 ? "bg-success" : "bg-danger")">
                                                @Model.CantidadDisponible
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Precio por Día:</th>
                                        <td>@Model.PrecioPorDia.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <th>Fecha de Ingreso:</th>
                                        <td>@Model.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th>Estado:</th>
                                        <td>
                                            <span class="badge @(Model.Estado ? "bg-success" : "bg-secondary")">
                                                @(Model.Estado ? "Nuevo" : "Usado")
                                            </span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-primary mb-3">Descripción</h4>
                                <div class="card bg-light p-3">
                                    <p>@Model.Descripcion</p>
                                </div>
                            </div>
                        </div>
                        
                            <a asp-controller="Equipo" asp-action="Lista" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Volver a la Lista
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .content-wrapper {
        background-color: #f4f6f9;
        padding: 20px;
    }
    .card {
        border-radius: 10px;
    }
    .table th {
        width: 40%;
        font-weight: 600;
    }
</style>

@model IEnumerable<SportsRentalManagement.Models.Equipo>

<div class="row">
    <div class="col-sm-10 offset-sm-1">
        <h2 class="text-center">Lista de Equipos</h2>
        <div class="mb-3 text-end">
            <a asp-controller="Equipo" asp-action="Nuevo" class="btn btn-primary">Crear Nuevo Equipo</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Cantidad Disponible</th>
                    <th>Precio por Día</th>
                    <th>Tipo de Equipo</th>
                    <th>Marca</th>
                    <th>Fecha de Ingreso</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equipo in Model)
                {
                    <tr>
                        <td>@equipo.Id</td>
                        <td>@equipo.Nombre</td>
                        <td>@equipo.Descripcion</td>
                        <td>@equipo.CantidadDisponible</td>
                        <td>@equipo.PrecioPorDia.ToString("C")</td>
                        <td>@equipo.TipoEquipo</td>
                        <td>@equipo.Marca</td>
                        <td>@equipo.FechaIngreso.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (equipo.Estado)
                            {
                                <span class="badge bg-success">Nuevo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Usado</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="Equipo" asp-action="Editar" asp-route-id="@equipo.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-controller="Equipo" asp-action="Eliminar" asp-route-id="@equipo.Id" onclick="return confirm('¿Estás seguro que deseas eliminar este equipo?');" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

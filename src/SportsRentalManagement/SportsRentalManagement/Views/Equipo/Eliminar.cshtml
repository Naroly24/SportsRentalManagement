@model Equipo

<div class="container">
    <h2>Confirmar Eliminación de Equipo</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Nombre</h5>
            <p>ID: @Model.Id</p>
            <p>Tipo: @Model.TipoEquipo</p>
            <form asp-action="EliminarConfirmado">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
                <a asp-action="Lista" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
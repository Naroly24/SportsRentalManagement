@model SportsRentalManagement.Models.Equipo
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white d-flex align-items-center">
                        <i class="bi bi-plus-circle fs-4 me-3"></i>
                        <h2 class="h3 mb-0">Crear Nuevo Equipo</h2>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Equipo" asp-action="Nuevo" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Nombre del Equipo</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                        <input class="form-control" asp-for="Nombre" required />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Tipo de Equipo</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-box"></i></span>
                                        <input class="form-control" asp-for="TipoEquipo" required />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Marca</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-shield"></i></span>
                                        <input class="form-control" asp-for="Marca" required />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Cantidad Disponible</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-stack"></i></span>
                                        <input class="form-control" asp-for="CantidadDisponible" type="number" required min="0" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Precio por Día</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input class="form-control" asp-for="PrecioPorDia" type="number" step="0.01" required />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Fecha de Ingreso</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                        <input class="form-control" asp-for="FechaIngreso" type="date" required />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Descripción</label>
                                    <textarea class="form-control" asp-for="Descripcion" rows="3"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Estado</label>
                                    <select class="form-select" asp-for="Estado">
                                        <option value="true">Nuevo</option>
                                        <option value="false">Usado</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <a asp-controller="Equipo" asp-action="Lista" class="btn btn-secondary me-3">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Guardar Equipo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .content-wrapper {
        background-color: #f4f6f9;
        padding: 20px;
    }
    .card {
        border-radius: 10px;
    }
    .input-group-text {
        background-color: #f1f3f5;
        border-color: #e9ecef;
    }
</style>
@model SportsRentalManagement.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="row g-3">
        <!-- Usuario -->
        <div class="col-md-6 mb-3">
            <label asp-for="UsuarioId" class="form-label fw-bold">Usuario</label>
            <div class="input-group has-validation">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <select class="form-select" asp-for="UsuarioId" required>
                    <option value="">Seleccione un Usuario</option>
                    @if (ViewBag.Usuarios != null)
                    {
                        foreach (var usuario in ViewBag.Usuarios as List<SelectListItem>)
                        {
                            <option value="@usuario.Value"
                                    selected="@(usuario.Value == Model.UsuarioId.ToString())">
                                @usuario.Text
                            </option>
                        }
                    }
                    else
                    {
                        <option>No hay usuarios disponibles</option>
                    }
                </select>
                <div class="invalid-feedback">
                    Por favor seleccione un usuario.
                </div>
            </div>
        </div>

        <!-- Equipo -->
        <div class="col-md-6 mb-3">
            <label asp-for="EquipoId" class="form-label fw-bold">Equipo</label>
            <div class="input-group has-validation">
                <span class="input-group-text"><i class="fas fa-basketball-ball"></i></span>
                <select class="form-select" asp-for="EquipoId" required>
                    <option value="">Seleccione un Equipo</option>
                    @if (ViewBag.Equipos != null)
                    {
                        foreach (var equipo in ViewBag.Equipos as List<SelectListItem>)
                        {
                            <option value="@equipo.Value"
                                    selected="@(equipo.Value == Model.EquipoId.ToString())">
                                @equipo.Text
                            </option>
                        }
                    }
                    else
                    {
                        <option>No hay equipos disponibles</option>
                    }
                </select>
                <div class="invalid-feedback">
                    Por favor seleccione un equipo.
                </div>
            </div>
        </div>

        <!-- Fecha Inicio -->
        <div class="col-md-6 mb-3">
            <label asp-for="FechaInicio" class="form-label fw-bold">Fecha Inicio</label>
            <input asp-for="FechaInicio" class="form-control" type="date" required />
            <div class="invalid-feedback">
                Por favor seleccione una fecha de inicio.
            </div>
        </div>

        <!-- Fecha Fin -->
        <div class="col-md-6 mb-3">
            <label asp-for="FechaFin" class="form-label fw-bold">Fecha Fin</label>
            <input asp-for="FechaFin" class="form-control" type="date" required />
            <div class="invalid-feedback">
                Por favor seleccione una fecha de fin.
            </div>
        </div>

        <!-- Estado de Reserva -->
        <div class="col-md-6 mb-3">
            <label asp-for="EstadoReserva" class="form-label fw-bold">Estado de Reserva</label>
            <input asp-for="EstadoReserva" class="form-control" required />
            <div class="invalid-feedback">
                Por favor ingrese el estado de la reserva.
            </div>
        </div>

        <!-- Total de Reserva -->
        <div class="col-md-6 mb-3">
            <label asp-for="TotalReserva" class="form-label fw-bold">Total de Reserva</label>
            <input asp-for="TotalReserva" class="form-control" type="number" step="0.01" required />
            <div class="invalid-feedback">
                Por favor ingrese el total de la reserva.
            </div>
        </div>

        <!-- Botón de Enviar -->
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

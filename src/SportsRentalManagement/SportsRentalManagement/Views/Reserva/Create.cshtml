@model SportsRentalManagement.Models.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
}

<h1>Crear Nueva Reserva</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UsuarioId" class="control-label">Usuario</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios">
            <option value="">Seleccione un Usuario</option>
        </select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EquipoId" class="control-label">Equipo</label>
        <select asp-for="EquipoId" class="form-control" asp-items="ViewBag.Equipos">
            <option value="">Seleccione un Equipo</option>
        </select>
        <span asp-validation-for="EquipoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
        <input asp-for="FechaInicio" class="form-control" type="date" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaFin" class="control-label">Fecha de Fin</label>
        <input asp-for="FechaFin" class="form-control" type="date" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EstadoReserva" class="control-label">Estado de la Reserva</label>
        <select asp-for="EstadoReserva" class="form-control">
            <option value="Pendiente">Pendiente</option>
            <option value="Confirmada">Confirmada</option>
            <option value="Cancelada">Cancelada</option>
        </select>
        <span asp-validation-for="EstadoReserva" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalReserva" class="control-label">Total de la Reserva</label>
        <input asp-for="TotalReserva" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TotalReserva" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model SportsRentalManagement.Models.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
}

<div class="content-wrapper">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-danger text-white">
                        <h2 class="h4 mb-0">
                            <i class="bi bi-exclamation-circle me-2"></i>Confirmar Eliminación
                        </h2>
                    </div>
                    <div class="card-body">
                        <h5 class="text-center mb-4">¿Está seguro de que desea eliminar esta reserva?</h5>
                        <dl class="row">
                            <dt class="col-sm-4 text-primary">Usuario</dt>
                            <dd class="col-sm-8">@Model.Usuario.Nombre</dd>

                            <dt class="col-sm-4 text-primary">Equipo</dt>
                            <dd class="col-sm-8">@Model.Equipo.Nombre</dd>

                            <dt class="col-sm-4 text-primary">Fecha de Inicio</dt>
                            <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4 text-primary">Fecha de Fin</dt>
                            <dd class="col-sm-8">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4 text-primary">Estado</dt>
                            <dd class="col-sm-8">@Model.EstadoReserva</dd>

                            <dt class="col-sm-4 text-primary">Total</dt>
                            <dd class="col-sm-8">@Model.TotalReserva.ToString("C")</dd>
                        </dl>
                        <div class="d-flex justify-content-between mt-4">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i>Eliminar
                                </button>
                            </form>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

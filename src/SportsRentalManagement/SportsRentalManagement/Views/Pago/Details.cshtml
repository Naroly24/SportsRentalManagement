<!-- Views/Pago/Details.cshtml -->
@model SportsRentalManagement.Models.Pago

@{
    ViewData["Title"] = "Detalles del Pago";
}

<h1>Detalles del Pago</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Información del Pago</h5>
        <dl class="row">
            <dt class="col-sm-3">ID del Pago</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Monto</dt>
            <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>

            <dt class="col-sm-3">Fecha de Pago</dt>
            <dd class="col-sm-9">@Model.FechaPago.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Método de Pago</dt>
            <dd class="col-sm-9">@Model.MetodoPago</dd>

            <dt class="col-sm-3">Estado del Pago</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.EstadoPago ? "bg-success" : "bg-warning")">
                    @(Model.EstadoPago ? "Completado" : "Pendiente")
                </span>
            </dd>
        </dl>

        <h5 class="card-title mt-4">Información de la Reserva</h5>
        <dl class="row">
            <dt class="col-sm-3">ID de Reserva</dt>
            <dd class="col-sm-9">@Model.ReservaId</dd>

            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9">@Model.Reserva.Usuario.Nombre</dd>

            <dt class="col-sm-3">Equipo</dt>
            <dd class="col-sm-9">@Model.Reserva.Equipo.Nombre</dd>

            <dt class="col-sm-3">Fecha Inicio</dt>
            <dd class="col-sm-9">@Model.Reserva.FechaInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Fecha Fin</dt>
            <dd class="col-sm-9">@Model.Reserva.FechaFin.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

<!-- Views/Pago/Index.cshtml -->
@model IEnumerable<SportsRentalManagement.Models.Pago>

@{
    ViewData["Title"] = "Lista de Pagos";
}

<h1>Lista de Pagos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Pago</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID Reserva</th>
            <th>Monto</th>
            <th>Fecha de Pago</th>
            <th>Método de Pago</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservaId</td>
                <td>@item.Monto.ToString("C")</td>
                <td>@item.FechaPago.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.MetodoPago</td>
                <td>
                    <span class="badge @(item.EstadoPago ? "bg-success" : "bg-warning")">
                        @(item.EstadoPago ? "Completado" : "Pendiente")
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Detalles
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

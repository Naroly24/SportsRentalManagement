<!-- Views/Pago/Delete.cshtml -->
@model SportsRentalManagement.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h1>Eliminar Pago</h1>

<h3>¿Está seguro de que desea eliminar este pago?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Reserva</dt>
        <dd class="col-sm-10">@Model.ReservaId</dd>

        <dt class="col-sm-2">Monto</dt>
        <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>

        <dt class="col-sm-2">Fecha de Pago</dt>
        <dd class="col-sm-10">@Model.FechaPago.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Método de Pago</dt>
        <dd class="col-sm-10">@Model.MetodoPago</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@(Model.EstadoPago ? "Completado" : "Pendiente")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>

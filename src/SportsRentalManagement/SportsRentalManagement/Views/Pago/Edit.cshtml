@model SportsRentalManagement.Models.Pago

<div class="container-fluid bg-light min-vh-100 py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center my-3">
                        <i class="fas fa-edit me-2"></i>Editar Pago
                    </h1>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReservaId" class="form-label fw-bold">Reserva</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-list-check"></i></span>
                                    <select class="form-select" asp-for="ReservaId" asp-items="ViewBag.Reservas" required>
                                        <option value="">Seleccione una reserva</option>
                                    </select>
                                    <div class="invalid-feedback">Por favor seleccione una reserva.</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Monto" class="form-label fw-bold">Monto</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                    <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
                                    <div class="invalid-feedback">Ingrese un monto válido.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaPago" class="form-label fw-bold">Fecha de Pago</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                    <input asp-for="FechaPago" class="form-control" type="datetime-local" required />
                                    <div class="invalid-feedback">Seleccione una fecha válida.</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MetodoPago" class="form-label fw-bold">Método de Pago</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                    <select asp-for="MetodoPago" class="form-select" required>
                                        <option value="">Seleccione un método de pago</option>
                                        @foreach (var metodo in ViewBag.MetodosPago)
                                        {
                                            <option value="@metodo">@metodo</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">Seleccione un método de pago.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstadoPago" class="form-label fw-bold">Estado del Pago</label>
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="EstadoPago" />
                                    <label class="form-check-label">Pago Completado</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

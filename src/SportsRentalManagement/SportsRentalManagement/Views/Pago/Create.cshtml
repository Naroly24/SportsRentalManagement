@model SportsRentalManagement.Models.Pago

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white d-flex align-items-center">
                        <i class="bi bi-currency-exchange fs-4 me-3"></i>
                        <h2 class="h3 mb-0">Crear Nuevo Pago</h2>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Pago" asp-action="Create" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Reserva</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-list-check"></i></span>
                                        <select asp-for="ReservaId" class="form-control" asp-items="ViewBag.Reservas">
                                            <option value="">Seleccione una reserva</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="ReservaId" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Monto</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                        <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
                                    </div>
                                    <span asp-validation-for="Monto" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Método de Pago</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                                        <select asp-for="MetodoPago" class="form-control">
                                            <option value="">Seleccione un método de pago</option>
                                            @foreach (var metodo in ViewBag.MetodosPago)
                                            {
                                                <option value="@metodo">@metodo</option>
                                            }
                                        </select>
                                    </div>
                                    <span asp-validation-for="MetodoPago" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Estado del Pago</label>
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="EstadoPago" />
                                        <label class="form-check-label">Pago Completado</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <a asp-controller="Pago" asp-action="Index" class="btn btn-secondary me-3">
                                    <i class="bi bi-x-circle me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Guardar Pago
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .content-wrapper {
        background-color: #f4f6f9;
        padding: 20px;
    }
    .card {
        border-radius: 10px;
    }
    .input-group-text {
        background-color: #f1f3f5;
        border-color: #e9ecef;
    }
</style>

@model SportsRentalManagement.Models.Usuario

<div class="content-wrapper">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h4 mb-0">
                            <i class="bi bi-info-circle me-2"></i>Detalles del Usuario
                        </h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4 text-primary">Nombre</dt>
                            <dd class="col-sm-8">@Model.Nombre</dd>

                            <dt class="col-sm-4 text-primary">Correo Electrónico</dt>
                            <dd class="col-sm-8">@Model.Correo</dd>

                            <dt class="col-sm-4 text-primary">Teléfono</dt>
                            <dd class="col-sm-8">@Model.Telefono</dd>

                            <dt class="col-sm-4 text-primary">Dirección</dt>
                            <dd class="col-sm-8">@Model.Direccion</dd>

                            <dt class="col-sm-4 text-primary">Fecha de Registro</dt>
                            <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4 text-primary">Documento de Identidad</dt>
                            <dd class="col-sm-8">@Model.DocumentoIdentidad</dd>
                        </dl>
                    </div>
                    <div class="card-footer text-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i>Volver a la lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .content-wrapper {
        background-color: #f4f6f9;
        padding: 20px;
    }

    .card {
        border-radius: 10px;
    }

    .text-primary {
        font-weight: bold;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

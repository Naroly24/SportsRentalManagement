@model SportsRentalManagement.Models.Usuario

<div class="container-fluid bg-light min-vh-100 py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center my-3">
                        <i class="fas fa-user-edit me-2"></i>Editar Usuario
                    </h1>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Nombre" class="form-control" type="text" required />
                                    <div class="invalid-feedback">Por favor ingrese un nombre.</div>
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold">Correo Electrónico</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Correo" class="form-control" type="email" required />
                                    <div class="invalid-feedback">Ingrese un correo válido.</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input asp-for="Telefono" class="form-control" type="text" required />
                                    <div class="invalid-feedback">Ingrese un número de teléfono válido.</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <input asp-for="Direccion" class="form-control" type="text" required />
                                    <div class="invalid-feedback">Ingrese una dirección válida.</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaRegistro" class="form-label fw-bold">Fecha de Registro</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    <input asp-for="FechaRegistro" class="form-control" type="date" required />
                                    <div class="invalid-feedback">Seleccione una fecha válida.</div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DocumentoIdentidad" class="form-label fw-bold">Documento de Identidad</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                    <input asp-for="DocumentoIdentidad" class="form-control" type="text" required />
                                    <div class="invalid-feedback">Ingrese un documento válido.</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

<style>
    .content-wrapper {
        background-color: #f4f6f9;
        padding: 20px;
    }
    .card {
        border-radius: 10px;
    }
    .input-group-text {
        background-color: #f1f3f5;
        border-color: #e9ecef;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

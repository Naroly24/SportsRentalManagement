@model IEnumerable<SportsRentalManagement.Models.Usuario>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="h3 mb-0">
                            <i class="bi bi-people-fill me-3"></i>Administración de Usuarios
                        </h2>
                        <a asp-action="Create" class="btn btn-light btn-action">
                            <i class="bi bi-person-plus-fill me-2"></i>Crear Nuevo Usuario
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Correo Electrónico</th>
                                        <th>Teléfono</th>
                                        <th>Dirección</th>
                                        <th>Fecha de Registro</th>
                                        <th>Documento</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var usuario in Model)
                                    {
                                        <tr>
                                            <td>@usuario.Id</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="me-3 text-primary">
                                                        <i class="bi bi-person-circle"></i>
                                                    </span>
                                                    @usuario.Nombre
                                                </div>
                                            </td>
                                            <td>@usuario.Correo</td>
                                            <td>@usuario.Telefono</td>
                                            <td>@usuario.Direccion</td>
                                            <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                            <td>@usuario.DocumentoIdentidad</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-sm btn-info">
                                                        <i class="bi bi-eye"></i> Detalles
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil"></i> Editar
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                                                        <i class="bi bi-trash"></i> Eliminar
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="card-footer text-center">
                            <p class="text-muted mb-0">No hay usuarios registrados</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Confirmation Modal for Delete -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Está seguro que desea eliminar este usuario?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
    </div>
</div>
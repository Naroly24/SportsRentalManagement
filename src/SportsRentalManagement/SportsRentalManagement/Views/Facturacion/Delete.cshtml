@model SportsRentalManagement.Models.Facturacion

@{
    ViewData["Title"] = "Eliminar Facturación";
}

<h1>Eliminar Facturación</h1>

<div>
    <h4>¿Está seguro de eliminar esta facturación?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Reserva ID</dt>
        <dd class="col-sm-10">@Model.ReservaId</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total</dd>

        <dt class="col-sm-2">Fecha de Factura</dt>
        <dd class="col-sm-10">@Model.FechaFactura.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.EstadoFactura</dd>

        <dt class="col-sm-2">Método de Pago</dt>
        <dd class="col-sm-10">@Model.MetodoPago</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Volver</a>

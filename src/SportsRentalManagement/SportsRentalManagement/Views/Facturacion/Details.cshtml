@model SportsRentalManagement.Models.Facturacion

@{
    ViewData["Title"] = "Detalles de Facturación";
}

<div class="content-wrapper">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h4 mb-0">
                            <i class="bi bi-info-circle me-2"></i>Detalles de la Facturación
                        </h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4 text-primary">ID</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4 text-primary">Reserva ID</dt>
                            <dd class="col-sm-8">@Model.ReservaId</dd>

                            <dt class="col-sm-4 text-primary">Total</dt>
                            <dd class="col-sm-8">@Model.Total.ToString("C")</dd>

                            <dt class="col-sm-4 text-primary">Fecha de Factura</dt>
                            <dd class="col-sm-8">@Model.FechaFactura.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-4 text-primary">Estado</dt>
                            <dd class="col-sm-8">@Model.EstadoFactura</dd>

                            <dt class="col-sm-4 text-primary">Método de Pago</dt>
                            <dd class="col-sm-8">@Model.MetodoPago</dd>
                        </dl>
                    </div>
                    <div class="card-footer text-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i>Volver a la lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

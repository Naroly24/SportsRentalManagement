@model SportsRentalManagement.Models.Facturacion

@{
    ViewData["Title"] = "Editar Facturación";
}

<div class="container-fluid bg-light min-vh-100 py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center my-3">
                        <i class="fas fa-file-invoice me-2"></i>Editar Facturación
                    </h1>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReservaId" class="form-label fw-bold">Reserva ID</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                    <input type="number" class="form-control" asp-for="ReservaId" required />
                                    <div class="invalid-feedback">
                                        Por favor ingrese un ID de reserva válido.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Total" class="form-label fw-bold">Total</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text">$</span>
                                    <input type="number" step="0.01" class="form-control" asp-for="Total" required min="0" />
                                    <div class="invalid-feedback">
                                        Por favor ingrese un total válido.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaFactura" class="form-label fw-bold">Fecha de Factura</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                    <input type="date" class="form-control" asp-for="FechaFactura" required />
                                    <div class="invalid-feedback">
                                        Por favor seleccione una fecha válida.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EstadoFactura" class="form-label fw-bold">Estado de la Factura</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                    <input type="text" class="form-control" asp-for="EstadoFactura" required />
                                    <div class="invalid-feedback">
                                        Por favor ingrese un estado de factura válido.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MetodoPago" class="form-label fw-bold">Método de Pago</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                    <select class="form-select" asp-for="MetodoPago" required>
                                        <option value="">Seleccione un Método de Pago</option>
                                        <option value="Tarjeta Crédito">Tarjeta Crédito</option>
                                        <option value="Tarjeta Débito">Tarjeta Débito</option>
                                        <option value="Transferencia">Transferencia</option>
                                        <option value="Efectivo">Efectivo</option>
                                        <option value="PayPal">PayPal</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Por favor seleccione un método de pago.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Facturación
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Custom form validation
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

